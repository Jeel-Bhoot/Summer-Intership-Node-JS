                <tr>
                    <td><label for="product_price">Product Price:</label></td>
                    <td><input type="text" name="product_price" placeholder="Enter Product Price" required></td>
                </tr>
                <tr>
                    <td><label for="product_stock">Stock Details:</label></td>
